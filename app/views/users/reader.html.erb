<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Amount</th>
			<th>Message</th>
			<th>Read</th>
		</tr>
	</thead>
	<% @contributions.each do |contribution| %>
		<tr>
			<td>
		    <%= contribution.name %>
		  </td>
		  <td>
		    <%= contribution.amount %>
		  </td>
		  <td>
		    <%= contribution.message %>
		  </td>
		  <td>
		  	<%= button_tag :Done %>
		  </td>
		</tr>
	<% end %>
<table>